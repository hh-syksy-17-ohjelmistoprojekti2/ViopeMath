<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="application.viope.math.combinedapp.ln7_Exercises_frac"
    android:id="@+id/drawer_layout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp">

    <ImageView
        android:id="@+id/errorText"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/inputEt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/questionNr"
        android:layout_width="319dp"
        android:layout_height="26dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="319dp"
        android:layout_height="57dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/exercise"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/submitBt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:background="@drawable/ln7_bt_gradient_green"
        android:text="@string/submit"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/errorText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputEt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/inputEt"
        app:layout_constraintHorizontal_bias="0.497" />

    <EditText
        android:id="@+id/inputEt"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/ln7_layout_border"
        android:ems="10"
        android:inputType="text"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/formula_one"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/formula_one"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/answerView"
        app:layout_constraintHorizontal_bias="0.491" />

    <TextView
        android:id="@+id/answerView"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/formula_one"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/formula_one"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/formula_one"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/nextBt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ln7_bt_gradient_green"
        android:text="@string/nextBt"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toRightOf="@+id/submitBt"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/submitBt"
        android:layout_marginTop="6dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/previousBt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ln7_bt_gradient_green"
        android:text="@string/previousBt"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="27dp"
        app:layout_constraintRight_toLeftOf="@+id/submitBt"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/submitBt"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/home_bt"
        app:srcCompat="@drawable/ic_home"
        android:background="@drawable/ln7_bt_gradient_violet"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/submitBt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/submitBt" />

    <ImageButton
        android:id="@+id/exerciseGr_bt"
        app:srcCompat="@drawable/ic_exercises"
        android:background="@drawable/ln7_bt_gradient_violet"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/submitBt"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/home_bt"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/submitBt" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula_one"
        android:layout_width="319dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        auto:engine="KaTeX"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/questionNr"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/questionNr"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/questionNr"
        app:layout_constraintHorizontal_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/ln7_navi_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/ln7_navi_header">
    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
