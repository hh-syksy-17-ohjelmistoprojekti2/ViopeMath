<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="application.viope.math.combinedapp.ln7_Exercises_frac"
    android:id="@+id/drawer_layout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp">

    <ImageView
        android:id="@+id/errorText"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inputEt"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-6dp"
        app:layout_constraintTop_toBottomOf="@+id/answerView"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/questionNr"
        android:layout_width="115dp"
        android:layout_height="23dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="402dp"
        android:layout_height="29dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/exercise"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/submitBt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ln7_bt_gradient_green"
        android:padding="4dp"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEt"
        app:layout_constraintVertical_bias="0.357" />

    <EditText
        android:id="@+id/inputEt"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/ln7_layout_border"
        android:ems="10"
        android:inputType="text"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/formula_one"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.143" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/answerView"
        android:layout_width="198dp"
        android:layout_height="93dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/questionNr"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nextBt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:background="@drawable/ln7_bt_gradient_green"
        android:text="@string/nextBt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="65dp"
        app:layout_constraintLeft_toRightOf="@+id/submitBt"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/submitBt"
        app:layout_constraintVertical_bias="0.48" />

    <Button
        android:id="@+id/previousBt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:background="@drawable/ln7_bt_gradient_green"
        android:text="@string/previousBt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="65dp"
        app:layout_constraintRight_toLeftOf="@+id/submitBt"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/submitBt"
        app:layout_constraintVertical_bias="0.48" />

    <ImageButton
        android:id="@+id/home_bt"
        app:srcCompat="@drawable/ic_home"
        android:background="@drawable/ln7_bt_gradient_violet"
        android:layout_width="50dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/exerciseGr_bt"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/answerView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/exerciseGr_bt"
        app:srcCompat="@drawable/ic_exercises"
        android:background="@drawable/ln7_bt_gradient_violet"
        android:layout_width="50dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/answerView"
        app:layout_constraintVertical_bias="1.0" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula_one"
        android:layout_width="249dp"
        android:layout_height="95dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/answerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        auto:engine="KaTeX" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/ln7_navi_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/ln7_navi_header">
    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
