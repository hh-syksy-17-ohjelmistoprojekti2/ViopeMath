<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <solid android:width="1dip" android:color="@color/accentDark" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="0dip" android:color="@color/accentDark" />
            <solid android:color="@color/accentDark"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="0dip" android:color="@color/accentDark" />
            <gradient android:angle="-90" android:startColor="@color/colorAccent" android:endColor="@color/accentDark" />
        </shape>
    </item>
</selector>